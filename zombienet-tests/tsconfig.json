{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "dist",
    "paths": {
      "dedot": ["../packages/api/src"],
      "dedot/*": ["../packages/api/src/*"],
      "@dedot/contracts": ["../packages/contracts/src"],
      "@dedot/contracts/*": ["../packages/contracts/src/*"]
    },
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../packages/contracts/tsconfig.json",
    },
    {
      "path": "../packages/dedot/tsconfig.json",
    },
  ],
}
