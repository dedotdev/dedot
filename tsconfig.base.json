{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "composite": true,
    "paths": {
      "@dedot/cli": ["../cli/src"],
      "@dedot/cli/*": ["../cli/src/*"],
      "@dedot/codecs": ["../codecs/src"],
      "@dedot/codecs/*": ["../codecs/src/*"],
      "@dedot/codegen": ["../codegen/src"],
      "@dedot/codegen/*": ["../codegen/src/*"],
      "@dedot/shape": ["../shape/src"],
      "@dedot/shape/*": ["../shape/src/*"],
      "@dedot/runtime-specs": ["../runtime-specs/src"],
      "@dedot/runtime-specs/*": ["../runtime-specs/src/*"],
      "@dedot/types": ["../types/src"],
      "@dedot/types/*": ["../types/src/*"],
      "@dedot/utils": ["../utils/src"],
      "@dedot/utils/*": ["../utils/src/*"],
      "@dedot/storage": ["../storage/src"],
      "@dedot/storage/*": ["../storage/src/*"],
      "@dedot/providers": ["../providers/src"],
      "@dedot/providers/*": ["../providers/src/*"],
      "@dedot/api": ["../api/src"],
      "@dedot/api/*": ["../api/src/*"],
      "dedot": ["../dedot/src"],
      "dedot/*": ["../dedot/src/*"]
    }
  }
}
