{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "composite": true,
    "paths": {
      "@delightfuldot/utils": ["../utils/src"],
      "@delightfuldot/utils/*": ["../utils/src/*"],
      "@delightfuldot/shape": ["../shape/src"],
      "@delightfuldot/shape/*": ["../shape/src/*"],
      "@delightfuldot/codecs": ["../codecs/src"],
      "@delightfuldot/codecs/*": ["../codecs/src/*"],
      "@delightfuldot/codegen": ["../codegen/src"],
      "@delightfuldot/codegen/*": ["../codegen/src/*"],
      "@delightfuldot/types": ["../types/src"],
      "@delightfuldot/types/*": ["../types/src/*"],
      "@delightfuldot/chaintypes": ["../chaintypes/src"],
      "@delightfuldot/chaintypes/*": ["../chaintypes/src/*"],
      "@delightfuldot/specs": ["../specs/src"],
      "@delightfuldot/specs/*": ["../specs/src/*"],
      "delightfuldot": ["../api/src"],
      "delightfuldot/*": ["../api/src/*"]
    }
  }
}
