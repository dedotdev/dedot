{
  "name": "@dedot/api",
  "version": "0.6.0",
  "description": "A delightful JavaScript/TypeScript client for Polkadot & Substrate",
  "author": "Thang X. Vu <thang@coongcrafts.io>",
  "homepage": "https://github.com/dedotdev/dedot/tree/main/packages/api",
  "repository": {
    "directory": "packages/api",
    "type": "git",
    "url": "https://github.com/dedotdev/dedot.git"
  },
  "main": "src/index.ts",
  "type": "module",
  "sideEffects": false,
  "dependencies": {
    "@dedot/codecs": "workspace:*",
    "@dedot/providers": "workspace:*",
    "@dedot/runtime-specs": "workspace:*",
    "@dedot/shape": "workspace:*",
    "@dedot/storage": "workspace:*",
    "@dedot/types": "workspace:*",
    "@dedot/utils": "workspace:*"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsc --project tsconfig.build.cjs.json",
    "clean": "rm -rf ./dist && rm -rf ./tsconfig.tsbuildinfo ./tsconfig.build.tsbuildinfo",
    "test": "vitest --watch=false"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./chaintypes": {
      "types": "./src/chaintypes/index.ts",
      "import": "./src/chaintypes/index.ts",
      "default": "./src/chaintypes/index.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "devDependencies": {
    "@polkadot/types": "^14.3.1"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "Apache-2.0"
}
