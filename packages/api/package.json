{
  "name": "dedot",
  "version": "0.0.1-alpha.31",
  "description": "A delightful JavaScript/TypeScript client for Polkadot & Substrate",
  "author": "Thang X. Vu <thang@coongcrafts.io>",
  "homepage": "https://github.com/dedotdev/dedot",
  "repository": {
    "directory": "packages/api",
    "type": "git",
    "url": "https://github.com/dedotdev/dedot.git"
  },
  "main": "src/index.ts",
  "type": "module",
  "sideEffects": false,
  "dependencies": {
    "@dedot/codecs": "workspace:*",
    "@dedot/providers": "workspace:*",
    "@dedot/runtime-specs": "workspace:*",
    "@dedot/shape": "workspace:*",
    "@dedot/storage": "workspace:*",
    "@dedot/types": "workspace:*",
    "@dedot/utils": "workspace:*"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsc --project tsconfig.build.cjs.json",
    "clean": "rm -rf ./dist && rm -rf ./tsconfig.tsbuildinfo ./tsconfig.build.tsbuildinfo",
    "test": "vitest --watch=false"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./chaintypes": {
      "types": "./src/chaintypes/index.ts",
      "import": "./src/chaintypes/index.ts",
      "default": "./src/chaintypes/index.ts"
    },
    "./codecs": {
      "types": "./src/subpaths/codecs/index.ts",
      "import": "./src/subpaths/codecs/index.ts",
      "default": "./src/subpaths/codecs/index.ts"
    },
    "./types": {
      "types": "./src/subpaths/types/index.ts",
      "import": "./src/subpaths/types/index.ts",
      "default": "./src/subpaths/types/index.ts"
    },
    "./types/json-rpc": {
      "types": "./src/subpaths/types/json-rpc/index.ts",
      "import": "./src/subpaths/types/json-rpc/index.ts",
      "default": "./src/subpaths/types/json-rpc/index.ts"
    },
    "./runtime-specs": {
      "types": "./src/subpaths/runtime-specs/index.ts",
      "import": "./src/subpaths/runtime-specs/index.ts",
      "default": "./src/subpaths/runtime-specs/index.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@polkadot/types": "^11.0.2"
  }
}
