{
  "name": "@dedot/cli",
  "version": "1.0.2",
  "author": "Thang X. Vu <thang@dedot.dev>",
  "homepage": "https://dedot.dev",
  "repository": {
    "directory": "packages/cli",
    "type": "git",
    "url": "https://github.com/dedotdev/dedot.git"
  },
  "bin": {
    "dedot": "./bin/dedot.mjs",
    "djs": "./bin/dedot.mjs"
  },
  "main": "src/index.ts",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && cp -R ./bin ./dist",
    "clean": "rm -rf ./dist && rm -rf ./tsconfig.tsbuildinfo ./tsconfig.build.tsbuildinfo",
    "start": "tsx src/index.ts",
    "test": "npx vitest --watch=false"
  },
  "dependencies": {
    "@dedot/api": "workspace:*",
    "@dedot/codecs": "workspace:*",
    "@dedot/codegen": "workspace:*",
    "@dedot/wasm": "^0.1.0",
    "@polkadot/types-support": "^16.5.4",
    "ora": "^9.1.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/yargs": "^17.0.35"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "Apache-2.0"
}
